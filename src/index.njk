{% extends './templates/base.html' %}

{% from './templates/macros.njk' import code %}

{% set title = "Home" %}

{% block head %}
<link rel="stylesheet" href="https://unpkg.com/prism-themes@1.9.0/themes/prism-vs.min.css" />
<script defer src="https://unpkg.com/prismjs@1.28.0/prism.js"></script>
{% endblock head %}

{% block content %}
<h1>Binyamin's CDN</h1>
<p>{{site.description}}</p>
<section>
	<h2>Usage</h2>
	<p>The packages are meant to be imported from within an ES module. They include the <var>x-typescript-types</var> HTTP header, for Deno usage.</p>

	<figure class="box-example">
		<figcaption>Example</figcaption>
		{% call code('js') %}
		import { html } from 'https://cdn.binyam.in/pkg/tiny-html-tags@0.1.0';

		document.append(
			html.p('Hello')
		);
		{% endcall %}
	</figure>
</section>
{% endblock content %}
